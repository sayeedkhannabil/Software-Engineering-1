<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.GalleryOrForum"
        android:background="@color/blue2"
        >
    <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="comp3350.grs.presentation.TopBar"
            tools:layout="@layout/fragment_top_bar"
            android:id="@+id/gallery_or_forum_top_bar"
            ></fragment>



    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/blue"
                android:text="Enter Game Gallery"
                android:textSize="60dp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:id="@+id/gallery_or_forum_gallery"
                ></TextView>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/orange"
                android:text="Enter Discussion Forum"
                android:textSize="60dp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:id="@+id/gallery_or_forum_forum"
                ></TextView>

    </LinearLayout>
</LinearLayout>