<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="comp3350.grs.presentation.Signup">

    <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="comp3350.grs.presentation.LoginBackground"
            tools:layout="@layout/fragment_login_background"
            android:id="@+id/fragment3"
            tools:layout_editor_absoluteY="-64dp"
            tools:layout_editor_absoluteX="47dp">

    </fragment>

    <Button
            android:text="@string/confirmSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:background="@drawable/rounded_rectangle"
            android:textSize="30sp"
            android:textColor="@color/blue2"
            app:layout_constraintTop_toBottomOf="@+id/fragment5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="224dp"
            android:padding="10dp" />

    <fragment
            android:name="comp3350.grs.presentation.userid_and_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_userid_and_pass"
            app:layout_constraintStart_toStartOf="@+id/fragment3"
            android:id="@+id/fragment5"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"></fragment>

    <TextView
            android:text="@string/welcomeJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="50sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@+id/fragment3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="250dp"
            android:layout_marginStart="80dp" />


</androidx.constraintlayout.widget.ConstraintLayout>