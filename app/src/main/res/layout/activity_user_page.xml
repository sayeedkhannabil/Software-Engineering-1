<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.UserPage"
        android:background="@color/blue2"
        >
    <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="comp3350.grs.presentation.TopBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout="@layout/fragment_top_bar"
            android:id="@+id/user_page_top_bar"
            ></fragment>

    <ImageView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:src="@drawable/user"
            app:layout_constraintTop_toBottomOf="@id/user_page_top_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="50dp"
            android:id="@+id/user_page_icon"
        ></ImageView>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            app:layout_constraintTop_toBottomOf="@id/user_page_icon"
            android:layout_marginHorizontal="50dp"
            android:id="@+id/user_page_user_info"
            ></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>